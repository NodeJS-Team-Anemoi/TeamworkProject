.container
    .well4
        .row
            .col-md-3
                span User:
                strong {{currentOrder.userName}}
            .col-md-3
                span Date:
                strong {{currentOrder.date | date : 'medium'}}
            .col-md-3
                span Shipping Address:
                strong {{currentOrder.shippingAddress}}
            .col-md-3
                span Payment method:
                strong {{currentOrder.paymentMethod}}

        table.table.table-striped.table-hover
            thead
                tr
                    th #
                    th Title
                    th Price
                    th isbn
                    th Language
            tbody
                tr(ng-repeat="product in currentOrder.products")
                    td {{$index + 1}}
                    td {{currentOrder.products[$index].title}}
                    td {{currentOrder.products[$index].price}}
                    td {{currentOrder.products[$index].isbn}}
                    td {{currentOrder.products[$index].language}}

    button.btn.btn-primary(ng-click="checkOut()") Check out
