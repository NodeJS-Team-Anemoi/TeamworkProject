.container
    .well
        form.form-horizontal(name="checkOutForm")
            fieldset
                legend Check out
                .form-group
                    label.col-md-2.control-label(for="fullName") Full name
                    .col-md-10
                        input.form-control(id="fullName", type="text", placeholder="Full Name", ng-model="user.fullName", required)
                .form-group
                    label.col-md-2.control-label(for="creditCard") Credit card
                    .col-md-10
                        input.form-control(id="creditCard", type="text", placeholder="123456789****", ng-model="user.creditCard", required)
                .form-group
                    label.col-md-2.control-label(for="tel") Telephone
                    .col-md-10
                        input.form-control(id="tel", type="text", placeholder="+359 888 123456", ng-model="user.tel", required)
                .form-group
                    label.col-md-2.control-label(for="address") Address
                    .col-md-10
                        input.form-control(id="address", type="text", placeholder="Location address", ng-model="user.shippingAddress", required)
                .form-group
                    label.col-md-2.control-label(for="shippingDate") Shipping date
                    .col-md-10
                        input.form-control(type='text', datepicker-popup='{{format}}', ng-model='dt', is-open='opened', min-date='minDate', max-date='\'2015-06-22\'', datepicker-options='dateOptions', date-disabled='disabled(date, mode)', ng-required='true', close-text='Close')
                        span.input-group-btn
                            button.btn.btn-default(type='button', ng-click='open($event)')
                                i.glyphicon.glyphicon-calendar
                .pull-right
                    button.btn.btn-primary(ng-click="signup(user)", ng-disabled="checkOutForm.$invalid") Create
                    a.btn.btn-primary(href="#/") Cancel